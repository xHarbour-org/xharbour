   METHOD Init() CONSTRUCTOR

   // Event declaration
   METHOD FormSauce_OnDestroy()
   METHOD FormSauce_OnLoad()
   METHOD ButtonDel_OnClick()
   METHOD ButtonAdd_OnClick()

ENDCLASS

METHOD Init( oParent, aParameters ) CLASS FormSauce
