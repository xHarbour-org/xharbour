      :Name                 := "ButtonAdd"
      :Left                 := 278
      :Top                  := 225
      :Width                := 80
      :Height               := 30
      :Caption              := "Add"
      :EventHandler[ "OnClick" ] := "ButtonAdd_OnClick"
      :Create()
