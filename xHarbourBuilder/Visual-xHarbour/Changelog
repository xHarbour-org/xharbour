          [ "Redo" ]         := STD_REDOW      + 1
          [ "Delete" ]       := STD_DELETE     + 1
          [ "FileNew" ]      := STD_FILENEW    + 1
          [ "FileOpen" ]     := STD_FILEOPEN   + 1
          [ "FileSave" ]     := STD_FILESAVE   + 1
          [ "PrintPreview" ] := STD_PRINTPRE   + 1
