   * Library\Source\WinUtil.c
     + HB_FUNC ( GETXPARAM )
         {
            short x = (short) LOWORD( hb_parnl(1) );
            hb_retni(x);
         }
     + HB_FUNC ( GETYPARAM )
         {
            short y = (short) HIWORD( hb_parnl(1) );
            hb_retni(y);
         }

